<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="clr-namespace:PoolControl.ViewModels"
			 xmlns:uc="clr-namespace:PoolControl.UserControls"
             x:Class="PoolControl.Pages.Cistern">
	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>
	<StackPanel Orientation="Vertical">
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
			<Button Classes="Measurement">
				<uc:MeasurementControl Label="{Binding Data.Distance.Label}" Measurement="{Binding Data.Distance.ValueWithUnit}" ButtonBackground="DarkMagenta"/>
			</Button>
 			<uc:MeasurementControl Label="{Binding Data.Distance.LabelL}" Measurement="{Binding Data.Distance.ValueWithUnitL}" ButtonBackground="DarkMagenta"/>
		</StackPanel>
	</StackPanel>
</UserControl>
