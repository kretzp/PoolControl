<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="PoolControl.UserControls.MeasurementControl">
	<StackPanel Classes="Measurement" Background="{Binding ButtonBackground}" DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType = UserControl}}">
		<TextBlock Classes="TLabel" Text="{Binding Label}"/>
		<TextBlock Classes="TMeasurement" Text="{Binding Measurement}"/>
	</StackPanel>
</UserControl>
